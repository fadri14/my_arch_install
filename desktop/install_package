for package in $packages
do
    if [[ packages != "" ]]
    then
        pacman -S --needed --noconfirm $package &> /dev/null

        if [[ "$?" == "0" ]]
        then
            echo -e "\033[32mOK\033[0m $package"
        else
            echo -e "\033[31mERREUR\033[0m $package"
        fi
    fi
done

